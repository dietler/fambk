model Family {
  id       Int      @id @default(autoincrement())
  lastName String
  address  String?
  Parents  Parent[]
  Children Child[]
}

model Parent {
  id        Int    @id @default(autoincrement())
  family    Family @relation(fields: [familyId], references: [id])
  familyId  Int
  firstName String
  sex       Sex?
}

model Child {
  id          Int     @id @default(autoincrement())
  family      Family  @relation(fields: [familyId], references: [id])
  familyId    Int
  firstName   String
  relativeAge Int?
  sex         Sex?
  school      String?
}

enum Sex {
  Female
  Male
}
